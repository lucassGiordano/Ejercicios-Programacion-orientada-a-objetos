#include<stdio.h>
#include<stdlib.h>
#include<windows.h>
#include<time.h>

//1 y 2 para equipos liebre y tortuga

int tablero[15][15];
int posiL[2]={0,0};
int posiT[2]={0,0};

void setColor(int textColor, int bgColor) 
{
    SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), textColor | bgColor);
}

void iniciotablero()
{
	for(int i=0;i<15;i++)
	{
		for(int j=0;j<15;j++)
		{
			tablero[i][j]='x';
		}
	}
	for(int j=0;j<2;j++)
	{
		int x =rand()%15;
		int y =rand()%15;
		tablero[x][y]='O';
	}
	for(int j=0;j<2;j++)
	{
		int x =rand()%15;
		int y =rand()%15;
		tablero[x][y]='C';
	}
}

void printtablero()
{
	for(int i=0;i<15;i++)
	{
		for(int j=0;j<15;j++)
		{
			printf("%c",tablero[i][j]);
		}
		printf("\n");
	}
}

void play(int equipo){
	int dado= rand()%6;
	int posi[2];
	if(equipo==1)
	{
		posi[0]=posiL[0];
		posi[1]=posiL[1];
	}
	else if(equipo==2)
	{
		posi[0]=posiL[0];
		posi[1]=posiL[1];
	} 
	int direccion=0;
	if(posi[1]%2==0)
	{
		direccion=1;
	}
	else
	{
		direccion=-1;
	}
	
	dado *=direccion;
	dado +=posi[0];
	if(dado>15){
		posi[1] +=1;
		posi[0] = dado%15;
	}
	if(equipo==1)
	{
		tablero[posiL[0]][posiL[1]]='X';
		posiL[0]=posi[0];
		posiL[1]=posi[1];
		tablero[posiL[0]][posiL[1]]='L';
	}
	else if(equipo==2)
	{
		tablero[posiT[0]][posiT[1]]='X';
		posiL[0]=posi[0];
		posiL[1]=posi[1];
		tablero[posiT[0]][posiT[1]]='T';
	}
}
int main()
{
	while(1)
	{
		srand(time(NULL));
		int opc;
		printf("Opcion 1:jugar\n");
		printf("Opcion 2:\n");
		printf("Opcion 0:Salir\n");
		scanf("%d",&opc);
		switch(opc)
		{
			case 1:
			{	
				iniciotablero();
				printtablero();
				break;
			}
			case 2:
			{	
				
				break;
			}
			case 0:
			{	
				
				break;
			}
			default:
			{	
				printf("Opcion invalida");
				break;
			}
		}
	}
}
